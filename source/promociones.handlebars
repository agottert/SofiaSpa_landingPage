{{#> layout title="Sofia Spa" seccion="Promociones"}}

  {{#*inline "css"}}
    <style type="text/css">
      .container.promociones {
        font-family: "Josefin Sans", sans-serif;
      }

      .efectivo {
        font-size: 2em;
        text-align: center;
      }

      .promociones h1 {
        text-align: center;
      }

      .promociones .titulo {
        font-size: 2.3em;
        text-align: center;
        margin: 70px 0 30px;
        color: #79d901;
        text-transform: uppercase;
      }

      .promo-contenedor {
        font-size: 1.5em;
        border-radius: 9px;
        margin-bottom: 10px;
      }
      .promociones .panel .panel-body {
        text-align: center;
      }
      .promociones .panel {
        max-width: 260px;
        min-width: 260px;
        margin-right: 20px;
        float: left;
        border-radius: 0;
      }
      .promociones .promo-center .panel {
        float: none;
        margin-right: auto;
        margin-left: auto;
      }
      .promociones .panel .panel-footer,
      .promociones .panel .panel-heading {
        color: #79d901;
        background-color: #fff;
        border-bottom: none;
        border-top: none;
        border-radius: 0;
      }
      .promociones .panel .panel-heading {
        padding-bottom: 60px;
        background-color: #346473;
        text-align: center;
      }
      .promociones .panel .valores {
        color: #79d901;
        border: 2px solid #79d901;
        background-color: #fff;
        max-width: 120px;
        min-height: 120px;
        padding: 31px 0;
        border-radius: 100%;
        margin: auto;
        text-align: center;
        margin-top: -60px;
        margin-bottom: 10px;
        -webkit-transition: all 0.3s ease-in-out;
        -moz-transition: all 0.3s ease-in-out;
        -o-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;
      }
      .promociones .panel:hover .valores {
        -webkit-transform: scale(1.1);
        -moz-transform: scale(1.1);
        -ms-transform: scale(1.1);
        transform: scale(1.1);
      }
      .promociones .panel .valores .precio {
        font-size: 1.8em;
      }
      .promociones .panel .tiempo {
        text-align: right;
      }
      .promociones .hombre .promo-contenedor {
        max-width: 560px;
        margin: auto;
      }
      .promociones .depilacion h3 {
        text-align: center;
      }
      .promociones .panel .panel-body {
        min-height: 200px;
      }
      .promociones .pestanas .panel {
        max-width: 250px;
        min-width: 250px;
        min-height: 402px;
      }
      .promociones .spa .panel {
        max-width: 250px;
        min-width: 250px;
        min-height: 562px;
      }
      .promociones .spa.spa-2 .panel {
        min-height: 423px;
      }
     .promociones .spa .promo-contenedor,
     .promociones .pestanas .promo-contenedor {
        margin: auto;
        max-width: 810px;
      }
      .promociones .spa.spa-1 .promo .panel-body {
        min-height: 500px;
      }
      .promociones .spa.spa-2 .promo .panel-body {
        min-height: 360px;
      }
      .promociones .pestanas .promo .panel-body {
        min-height: 310px;
      }
      @media screen and (max-width: 767px) {
        .promociones .panel {
          float: none;
          margin-right: auto;
          margin-left: auto;
        }
        .promociones h3 {
          text-align: center;
        }
        .promociones .panel .panel-body,
        .promociones .spa.spa-1 .promo .panel-body,
        .promociones .spa.spa-2 .promo .panel-body,
        .promociones .pestanas .promo .panel-body {
          min-height: 0;
        }
      }
    </style>
  {{/inline}}

  {{#*inline "content"}}
    <div class="container promociones">
      <div class="row">
        <div class="col-md-12 titulo">
          <h2>Depilación Definitiva <small>Soprano XL/3G ICE Alma</small></h2>
        </div>
      </div>
      <div class="row depilacion">
        <div class="col-md-12">
          <h3>Mujer</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 promo-contenedor">
          {{#> promo precio=650}}
            {{#*inline "descripcion"}}
              Rostro Completo sin cejas
            {{/inline}}
          {{/promo}}

          {{#> promo precio=500}}
            {{#*inline "descripcion"}}
              <ul class="list-unstyled">
                <li>Bozo</li>
                <li>Mentón</li>
                <li>Cuello</li>
              </ul>
            {{/inline}}
          {{/promo}}

          {{#> promo precio=800}}
            {{#*inline "descripcion"}}
              <ul class="list-unstyled">
                <li>Cavado</li>
                <li>Pelvis Completa</li>
                <li>Tira de Cola</li>
              </ul>
            {{/inline}}
          {{/promo}}

          {{#> promo precio=850}}
            {{#*inline "descripcion"}}
              <ul class="list-unstyled">
                <li>½ Pierna</li>
                <li>Cavado</li>
                <li>Axilas</li>
              </ul>
            {{/inline}}
          {{/promo}}
        </div>
      </div>
      <div class="row depilacion">
        <div class="col-md-12">
          <h3>Hombre</h3>
        </div>
      </div>
      <div class="row hombre">
        <div class="col-md-12">
          <div class="promo-contenedor">
            {{#> promo precio=800}}
              {{#*inline "descripcion"}}
                <ul class="list-unstyled">
                  <li>Espalda Completa</li>
                  <li>Cintura</li>
                  <li>Hombro</li>
                </ul>
              {{/inline}}
            {{/promo}}

            {{#> promo precio=900}}
              {{#*inline "descripcion"}}
                <ul class="list-unstyled">
                  <li>Pectorales</li>
                  <li>Abdomen completo</li>
                  <li>Tira de pelvis</li>
                </ul>
              {{/inline}}
            {{/promo}}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 titulo">
          DEPILACIÓN SISTEMA ESPAÑOL
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 promo-contenedor">
          {{#> promo precio=0 titulo="PROMO 1"}}
            {{#*inline "descripcion"}}
              <ul class="list-unstyled">
                <li>Pierna entera cavado</li>
                <li>Pelvis completa</li>
                <li>Tira de cola</li>
              </ul>
            {{/inline}}
          {{/promo}}

          {{#> promo precio=0 titulo="PROMO 2"}}
            {{#*inline "descripcion"}}
              <ul class="list-unstyled">
                <li>Cavado</li>
                <li>Pelvis completa</li>
                <li>Tira de cola</li>
              </ul>
            {{/inline}}
          {{/promo}}

          {{#> promo precio=0 titulo="PROMO 3"}}
            {{#*inline "descripcion"}}
              <ul class="list-unstyled">
                <li>1/2 pierna</li>
                <li>Pelvis completa</li>
                <li>Tira de cola</li>
              </ul>
            {{/inline}}
          {{/promo}}

          {{#> promo titulo="PROMO 4"}}
            {{#*inline "descripcion"}}
              <ul class="list-unstyled">
                <li>Pierna entera cavado</li>
                <li>Axila</li>
              </ul>
            {{/inline}}
          {{/promo}}
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 titulo">
          SPA
        </div>
      </div>
      <div class="row spa spa-1">
        <div class="col-md-12">
          <div class="promo-contenedor">
              {{#> promo titulo="COMBO 1" precio=900 tiempo="2hs"}}
                {{#*inline "descripcion"}}
                  <p>Limpieza de cutis profunda con extracciones.</p>
                  <p>Masaje descontracturante de 1hs.</p>
                {{/inline}}
              {{/promo}}

              {{#> promo precio=700 tiempo="2hs" titulo="COMBO 2"}}
                {{#*inline "descripcion"}}
                  <p>Pulido de espuma de vainilla o Rosa Gálica.</p>
                  <p>Máscara Hidratante de chocolate o Rosa Gálica.</p>
                  <p>Masaje descontracturante de espalda, cervical y brazo de 30 min.</p>
                {{/inline}}
              {{/promo}}

              {{#> promo precio=980 tiempo="2.30hs + Break" titulo="COMBO 3"}}
                {{#*inline "descripcion"}}
                  <p>Punta de diamante facial. Mascara Peel off de oro.</p>
                  <p>Pulido corporal con jalea renovadora de oro. </p>
                  <p>Masaje descontracturante de 1hs.</p>
                  <p>Con Elixir de Oro enriquecido con aceite esencial de Argan.</p>
                {{/inline}}
              {{/promo}}
          </div>
        </div>
      </div>
      <div class="row spa spa-2">
        <div class="col-md-12">
          <div class="promo-contenedor">
            {{#> promo precio=650 tiempo="1.30hs" titulo="COMBO 4" }}
              {{#*inline "descripcion"}}
                <p>Pulido corporal. Peeling. Máscara hidratante revitalizadora a elección:</p>
                <p>Chocolate, Frutal, Rosa Gálica o Antioxidante.</p>
              {{/inline}}
            {{/promo}}

            {{#> promo titulo="COMBO 5" precio=750 tiempo="1hs" precio_2=600 tiempo_2="60min"}}
              {{#*inline "descripcion"}}
                <p>Pulido corporal.</p> <p>Masaje descontracturante de ½ hs. </p>
              {{/inline}}
            {{/promo}}

            {{#> promo precio=650 tiempo="1.30hs" titulo="COMBO 6" }}
              {{#*inline "descripcion"}}
              <p>Pulido corporal.</p> <p>Máscara corporal a elección.</p>
              {{/inline}}
            {{/promo}}
          </div>
        </div>
      </div>



      <div class="row">
        <div class="col-md-12 titulo">
          PESTAÑAS
        </div>
      </div>
      <div class="row pestanas">
        <div class="col-md-12">
          <div class="promo-contenedor">
            {{#> promo precio="1170" tiempo="2hs" }}
              {{#*inline "descripcion"}}
              <p>Extensión de pestañas.</p>
              <p>Tratamiento pelo a pelo, con pegamento médico hipoalergénico.</p>
              <p>Durabilidad por 20 días.</p>

              {{/inline}}
            {{/promo}}
            {{#> promo precio="460" tiempo="1hs" }}
              {{#*inline "descripcion"}}
              <p> Permanente y Tintura de pestañas.</p>
              <p> Durabilidad de 2 a 3 meses. </p>

              {{/inline}}
            {{/promo}}
            {{#> promo precio="950" tiempo="1hs" }}
              {{#*inline "descripcion"}}
              <p>Crecimiento natural con producto </p>
              <p>B-LARGE.</p>

              {{/inline}}
            {{/promo}}
          </div>
        </div>
      </div>

      <div class="efectivo">
        Todas las promos se podran abonar solo en efectivo
      </div>
    </div>
  {{/inline}}

{{/layout}}
