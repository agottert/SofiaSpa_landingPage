  {{#*inline "scripts"}}
    <!-- Photoswipe JS Files -->
    <script defer="defer" src="js/ps/photoswipe.min.js"></script>
    <script defer="defer" src="js/ps/photoswipe-ui-default.min.js"></script>
    <script defer="defer" src="js/ps/initps.js"></script>
    <script type="text/javascript">
      function setHeaderHeight(){
        var height = Math.ceil(window.innerWidth * 596/1400);
        document.querySelector('.presentacion .header').style.maxHeight = height + 'px';
        document.querySelector('.presentacion .header .titulo2').style.top = (-1 * (height - 40)) + 'px';
      }
      function resizeListener(){
        var resizeTimeout = null;
        window.addEventListener("resize", function(){
          if (resizeTimeout) {
            window.clearInterval(resizeTimeout);
          }
          resizeTimeout = window.setTimeout(function(){
            setHeaderHeight();
            resizeTimeout = null;
          }, 200);
        }, false);
      }
      setHeaderHeight();
      document.addEventListener("DOMContentLoaded", function(){
        initPS('.listado-main');
        resizeListener();
      }, false);
      window.addEventListener("load", function(){
        document.querySelector('.listado-main').style.opacity = 1;
      }, false);
    </script>
