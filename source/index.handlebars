{{#> layout title="Sofia Spa" custom-scripts=true}}
  {{#*inline "css"}}
    <!-- photoswipe CSS files -->
    <link rel="stylesheet" href="css/ps/photoswipe.css">
    <link rel="stylesheet" href="css/ps/default-skin/default-skin.css">
    <!-- Section CSS -->
    <style type="text/css">
      .presentacion {
        margin-right: 0px;
      }

      .presentacion div {
        padding-bottom: 50px;
        padding-right: 0;
      }

      .presentacion img {
        min-width: 100%;
      }
      .listado-main {
        opacity: 0;
        transition: opacity 0.5s ease-in;
      }
      .listado-main .item {
        padding: 2px;
        margin-bottom: 2px;
        overflow: hidden;
        max-height: 235px;
      }
      .listado-main .item img {
        margin: auto;
      }

      .listado-main .item .cover {
        padding-top: 100px;
        opacity: 0;
        position: relative;
        max-width: 387px;
        text-align: center;
        background-color: #79d901;
        transition: opacity 0.2s;
        top: -235px;
        min-height: 235px;
        pointer-events: none;
        margin: auto;
      }

      .listado-main .item:hover .cover {
        opacity: 0.7;
      }

      .titulo2 h1 {
        font-family: "Josefin Sans", sans-serif;
        font-size: 4em;
        color: #79d901;
        text-align: center;
        margin-bottom: 40px;
      }
      .presentacion .header {
        max-height: 900px;
        overflow: hidden;
        transition: max-height 0.5s ease-in-out;
      }
      .presentacion .header .titulo2 {
        position: relative;
        top: -400px;
        transition: top 0.5s ease-in-out;
        z-index: 1;
      }
      .presentacion .header h1 {
        color: #79d901;
        max-width: 620px;
        margin: auto;
        font-size: 5em;
        text-shadow: 3px 3px 3px #333;
      }
      .presentacion .header .titulo2 svg {
        margin: auto;
        max-height: 100px;
        max-width: 100px;
        min-width: 100px;
        display: block;
        text-shadow: 3px 3px 3px #333;
        -webkit-filter: drop-shadow( 3px 3px 3px #333 );
                filter: drop-shadow( 3px 3px 3px #333 );
      }
      .presentacion .header .titulo2 svg path {
        fill: #79d901;
        stroke: #fff;
      }
      .presentacion .header .fondo {
        position: relative;
        top: 0px;
      }
      .loto {
        display: none;
      }

      @media screen and (max-width: 767px) {
        .titulo2 h1 {
          font-size: 2.6em;
          margin-top: 30px;
          margin-bottom: 30px;
        }
        .presentacion.visible-xs-block .titulo2 {
          padding-top: 0;
          padding-bottom: 0;
        }
        .presentacion.visible-xs-block .titulo2 h1 {
          font-size: 3em;
          background-image: url("imagenes/mobile22.png");
          color: #346473;
          background-size: 375px 150px;
          background-repeat: no-repeat;
          background-position: 50%;
          margin-top: 0;
          margin-bottom: 0;
          padding-top: 10px;
        }
        .listado-main .item {
          max-height: 195px;
        }
      }
      @media screen and (max-width: 767px) {
        .listado-main {
          opacity: 1;
        }
      }
      @media screen and (min-width: 376px) and (max-width: 640px) {
        .presentacion.visible-xs-block .titulo2 h1 {
          background-image: url("imagenes/mobile32.png");
          background-size: 640px 100px;
        }
      }
      @media screen and (min-width: 641px) and (max-width: 767px) {
        .presentacion.visible-xs-block .titulo2 h1 {
          background-size: cover;
        }
      }
      @media screen and (min-width: 1600px) {
        .presentacion .header .titulo2 {
          top: -600px;
        }
        .presentacion .header h1 {
          max-width: 1000px;
          font-size: 7em;
        }
      }
    </style>
  {{/inline}}
